programa {
	funcao inicio() {
	    inteiro n1
	  
	    escreva("Digite o numero:")
		leia(n1)
	
	    se(n1 >=0){
	        se(n1>0){
	            escreva("Positivo")
	        }
	        senao{
	            escreva("Nulo")
	        }
	        
	    }
	    senao{
	        escreva("Negativo")
	    }
	}
}

